<mvc:View controllerName="GithubSAP-UI5-Fiori-16_Routing.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	
			<Page title="{i18n>title}" >
				<headerContent>
					<Button icon="sap-icon://action" press="onNext"></Button>
				</headerContent>
				<content>
					<VBox class="vbox" justifyContent="Center" alignContent="Center" fitContainer="true" alignItems="Center">
						<items>
							<Label class="label" text="UserName"></Label>
							<Input class="input" id="user" placeholder="Enter your Username"></Input>
							<Label class="label" text="Password"></Label>
							<Input class="input" id="pwd" placeholder="Enter your Password" type="Password"></Input>
							<Button class="btn" text="Login" press="onLogin"></Button>
						</items>
					</VBox>
				</content>
			</Page>
	
</mvc:View>